{
  "name": "frontend-src",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@mantine/core": "^7.11.2",
    "@mantine/hooks": "^7.11.2",
    "@mantine/notifications": "^7.11.2",
    "@reduxjs/toolkit": "^1.9.7",
    "@tabler/core": "^1.0.0-beta20",
    "@tabler/icons-react": "^3.11.0",
    "dayjs": "^1.11.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.26.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "build:deploy": "vite build && node ../deploy-tools/deploy.js",
    "postbuild": "node ../deploy-tools/deploy.js",
    "preview": "vite preview",
  "test": "NODE_OPTIONS='--require ../jest-preload.js' jest",
    "test:watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "test-coverage-out": "jest --coverage --coverageDirectory=coverage --coverageReporters=\"html\""
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": { "jsx": true }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect",
        "runtime": "automatic"
      }
    },
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react/no-unescaped-entities": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
    }
    ,
    "globals": {
      "global": "readonly"
    },
    "overrides": [
      {
        "files": ["**/*.test.{js,jsx}", "**/*.spec.{js,jsx}"],
        "rules": {
          "no-unused-vars": "off",
          "no-undef": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-matchmedia-mock": "^1.1.0",
  "whatwg-fetch": "^3.6.2",
    "eslint": "^8.50.0",
  "eslint-plugin-react": "^7.33.2",
  "eslint-plugin-react-hooks": "^4.0.0",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.77.8",
    "vite": "^5.0.0"
  }
}
